<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CarbonTrack Dashboard</title>
  <link rel="stylesheet" href="/flux.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar">
    <h2>GreenTrail</h2>
    <ul>
      <li><a href="/flux" class="active">Analytics</a></li>
      <li><a href="/insights">AI Insights</a></li>
      <li><a href="/landing">Calc</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </aside>

  <!-- Main Content -->
  <main class="main-content">
    <header>
      <h1>Analytics</h1>
    </header>

    <section class="stats">
      <div class="card">
        <h3>Total Carbon Footprint</h3>
        <p>2.5 tons CO₂</p>
      </div>
      <div class="card">
        <h3>Monthly Reduction</h3>
        <p>-5%</p>
      </div>
      <div class="card">
        <h3>Eco Score</h3>
        <p>75%</p>
      </div>
    </section>

    <!-- Updated Charts -->
    <section class="chart-container">
      <canvas id="monthlyChart"></canvas>
    </section>

    <section class="chart-container">
      <canvas id="yearlyChart"></canvas>
    </section>

    <!-- AI Insights -->
    <section class="ai-insights">
      <h2>AI-Powered Insights</h2>
      <p>AI suggests reducing electricity use by 10% to cut 0.5 tons of CO₂ per year.</p>
    </section>
  </main>

  <script src="/script.js"></script>
</body>
</html>
